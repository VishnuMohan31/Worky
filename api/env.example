# Worky API Environment Configuration
# Copy this file to .env and update values as needed

# Application Settings
APP_NAME="Worky API"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=development

# Database Configuration (for local development outside Docker)
DATABASE_HOST=localhost
DATABASE_PORT=5437
DATABASE_NAME=worky
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Security
SECRET_KEY=your-secret-key-change-in-production-use-a-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/worky-api.log

# Optional: External Services
GITHUB_TOKEN=
GITLAB_TOKEN=
BITBUCKET_TOKEN=
DISCORD_WEBHOOK_URL=

# Optional: Monitoring
PROMETHEUS_PORT=9090
LOKI_URL=

